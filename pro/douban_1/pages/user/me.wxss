.profile {
    width: 100%;
    height: 420rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

.profile[data-gender=M] {
    background-image: url("https://img3.doubanio.com/f/talion/5cac30ad3b5e00f64019f40f71685e21d50428d7/pics/card/bg_default_profile_blu.png");
}

.profile[data-gender=F] {
    background-image: url("https://img3.doubanio.com/f/talion/dcdaf9ef2bbb0a4c295012cf0feef46643cd88c3/pics/card/bg_default_profile_org.png");
}

.profile[data-gender=''],.profile[data-gender=U] {
    background-image: url("https://img3.doubanio.com/f/talion/f2221edbbd29ec8e8b83f26384febcc1355de2af/pics/card/bg_default_profile_grn.png");
}

.profile .mask {
    height: 100%;
    width: 100%;
    padding-top: 54rpx;
    box-sizing: border-box;
}

.profile[data-has-banner=true] .mask {
    background: linear-gradient(to bottom,rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%);
}

.profile .avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    overflow: hidden;
    margin: 0 auto;
}

.profile .username {
    text-align: center;
    margin-top: 18rpx;
    font-size: 48rpx;
    font-weight: bold;
    color: #FFFFFF;
}

.profile .buttons-wrap {
    font-size: 28rpx;
    margin-top: 24rpx;
}

.profile .buttons-wrap .btn {
    width: 180rpx;
    height: 54rpx;
    background: rgba(255,255,255,0.1);
    border: 1rpx solid #FFFFFF;
    border-radius: 6rpx;
    line-height: 54rpx;
    color: #FFFFFF;
    font-size: 28rpx;
}

.profile .buttons-wrap .hint {
    color: #FFFFFF;
    font-size: 26rpx;
    margin: 0 auto;
    width: 80rpx;
    padding-left: 50rpx;
    padding-top: 14rpx;
    padding-bottom: 14rpx;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 36rpx;
    background-position-x: 0;
    background-position-y: center;
}

.profile .corner-btn-wrap {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}

.profile .corner-btn-wrap button {
    color: #FFFFFF;
    font-size: 24rpx;
    line-height: 1;
    padding: 12rpx 15rpx 12rpx 44rpx;
    border: 1rpx solid #FFFFFF;
    border-radius: 6rpx;
    background-color: rgba(255,255,255,0.1);
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 24rpx;
    background-position-x: 17rpx;
    background-position-y: center;
}

.profile[data-is-me=true] .mask {
    padding-top: 72rpx;
}

.profile[data-is-me=true] .username {
    margin-top: 46rpx;
}

.short-comments {
    margin-top: 20rpx;
    padding: 30rpx;
    background-color: #FFFFFF;
}