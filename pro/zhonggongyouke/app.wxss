.container {
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    font-size: 24rpx;
    background: #ffffff;
}

.swiper {
    box-sizing: border-box;
    width: 100%;
    height: 280rpx;
    padding: 0 30rpx;
    background-color: #fff;
    overflow: hidden;
}

swiper {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

swiper-item .banner {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #f5f5f5;
}

swiper-item image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

swiper .wx-swiper-dot {
    width: 10rpx;
    height: 10rpx;
    border: 1px solid #fff;
}

swiper .wx-swiper-dot::before {
    content: '';
    width: 10rpx;
    height: 10rpx;
}

swiper .wx-swiper-dot-active::before {
    content: '';
    width: 10rpx;
    height: 10rpx;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.tab-box {
    box-sizing: border-box;
    width: 100%;
    height: 114rpx;
    padding: 28rpx 0;
    background: #ffffff;
}

.tab {
    display: inline-block;
    width: 50%;
    height: 57rpx;
    text-align: center;
}

.tab-title {
    display: inline-block;
    width: 100%;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    color: #7d829a;
}

.tab-line {
    display: inline-block;
    width: 30rpx;
    height: 6rpx;
    margin: 19rpx auto 0;
    border-radius: 3rpx;
    background: #fff;
}

.tab.on .tab-title {
    color: #2a2e3d;
    font-weight: bold;
}

.tab.on .tab-line {
    background: #ef533d;
}

button::after {
    border: none;
}

.dis-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid #f5f5f5;
    line-height: 120rpx;
    background: #cccccc;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
}

.study {
    background: #f99a4a;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    box-sizing: border-box;
    width: 100%;
    height: 121rpx;
    border-top: 1rpx solid #f5f5f5;
    background: #fff;
}

.price-box {
    box-sizing: border-box;
    display: inline-block;
    float: left;
    width: 400rpx;
    height: 63rpx;
    padding-left: 30rpx;
    padding-top: 15rpx;
    line-height: 48rpx;
    font-size: 48rpx;
    color: #ef533d;
}

.new-price {
    font-weight: bold;
}

.new-price text {
    font-size: 26rpx;
    font-weight: bold;
}

.old-price {
    margin-left: 25rpx;
    font-size: 26rpx;
    color: #7d829a;
    text-decoration: line-through;
}

.sign-box {
    box-sizing: border-box;
    display: inline-block;
    float: left;
    width: 400rpx;
    height: 54rpx;
    padding-left: 30rpx;
    line-height: 54rpx;
    font-size: 22rpx;
    color: #7d829a;
}

.yellow {
    color: #ef533d;
}

.buy {
    display: inline-block;
    float: right;
    width: 340rpx;
    height: 120rpx;
    line-height: 120rpx;
    background: #ef533d;
    text-align: center;
    font-size: 34rpx;
    color: #f5f5f5;
}

.price-box-little,.sign-box-little {
    width: 200rpx;
}

.buy-little {
    width: 240rpx;
    background: #f99a4a;
}

.cheap-btn {
    display: inline-block;
    float: right;
    width: 240rpx;
    height: 120rpx;
    line-height: 120rpx;
    background: #ef533d;
    text-align: center;
    font-size: 34rpx;
    color: #f5f5f5;
}

.go-pay {
    padding-left: 30rpx;
    padding-top: 40rpx;
    line-height: 40rpx;
}

.go-pay-text {
    font-size: 26rpx;
    color: #7d829a;
}

.go-pay-sign {
    font-size: 26rpx;
    color: #ef533d;
    margin-left: 30rpx;
    margin-right: 10rpx;
}

.go-pay-price {
    font-size: 48rpx;
    color: #ef533d;
    font-weight: bold;
}

.loadingTip {
    height: 50rpx;
    padding: 10rpx 0;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    color: #666;
}

.loadingTipImg {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.loadingTip text {
    vertical-align: middle;
}

.bold {
    font-weight: bold;
}

.fixedtop {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}

.scoll-h {
    height: 100%;
}

.cover-img {
    position: fixed;
    bottom: 100rpx;
    right: 30rpx;
    z-index: 1000000000;
    width: 90rpx;
    height: 90rpx;
}

.cheap-half {
    width: 50%;
}

.buy-half {
    width: 50%;
    background: #f99a4a;
}

.buy-full {
    width: 100%;
}