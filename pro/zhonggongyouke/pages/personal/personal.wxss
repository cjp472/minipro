.user-info {
    box-sizing: border-box;
    width: 100%;
    height: 204rpx;
    padding: 42rpx 30rpx;
}

.avatar {
    position: relative;
    display: inline-block;
    float: left;
    width: 122rpx;
    height: 122rpx;
    margin-right: 28rpx;
}

.avatar-bg {
    position: absolute;
    top: 1rpx;
    left: 1rpx;
    width: 120rpx;
    height: 120rpx;
    z-index: 1;
}

.avatar-img {
    box-sizing: border-box;
    position: absolute;
    top: 1rpx;
    left: 1rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    z-index: 2;
}

.cover {
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    width: 122rpx;
    height: 122rpx;
    z-index: 3;
}

.nickname {
    display: inline-block;
    width: auto;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 34rpx;
    color: #2a2e3d;
}

.sign {
    box-sizing: border-box;
    display: block;
    width: 144rpx;
    height: 46rpx;
    margin-top: 19rpx;
    padding-left: 28rpx;
    line-height: 46rpx;
    border: 1px solid #2a2e3d;
    border-radius: 22rpx;
}

.sign.on {
    padding-left: 16rpx;
    border: 1rpx solid #7d829a;
    color: #7d829a;
}

.sign-icon {
    display: inline-block;
    float: left;
    width: 26rpx;
    height: 26rpx;
    margin: 8rpx 8rpx 0 0;
}

.record {
    display: block;
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    color: #7d829a;
    text-align: right;
}

.lesson-box {
    box-sizing: border-box;
    width: 100%;
    height: 152rpx;
    padding: 18rpx 30rpx 45rpx 30rpx;
    clear: both;
    line-height: 100rpx;
}

.lesson {
    display: inline-block;
    width: 50%;
    height: 100%;
}

.t-icon {
    display: inline-block;
    float: left;
    width: 74rpx;
    height: 74rpx;
    margin-left: 40rpx;
    margin-right: 20rpx;
}

.lesson-txt {
    display: inline-block;
    float: left;
    width: auto;
    height: 42rpx;
    margin-top: 16rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #2a2e3d;
}

.lesson-name {
    display: inline-block;
    float: left;
    height: 42rpx;
    line-height: 42rpx;
    font-weight: bold;
}

.link-icon {
    display: inline-block;
    float: left;
    width: 24rpx;
    height: 24rpx;
    margin-top: 8rpx;
    margin-left: 4rpx;
    vertical-align: center;
}

.lesson-num {
    display: inline-block;
    float: left;
    width: auto;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 26rpx;
    color: #7d829a;
}

.live-tip {
    display: inline-block;
    float: left;
    width: auto;
    height: 31rpx;
    line-height: 31rpx;
    font-size: 22rpx;
    color: #ef533d;
}

.list-box {
    width: 100%;
    height: auto;
    padding-top: 16rpx;
    border-top: 20rpx solid #f5f5f5;
}

.list {
    display: block;
    height: 120rpx;
    padding: 0 30rpx;
    line-height: 120rpx;
}

.l-icon {
    display: inline-block;
    float: left;
    width: 32rpx;
    height: 32rpx;
    margin-top: 44rpx;
    margin-right: 24rpx;
}

.title {
    display: inline-block;
    float: left;
    width: auto;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 30rpx;
    color: #2a2e3d;
}

.item {
    display: inline-block;
    float: right;
    width: auto;
    height: 120rpx;
    line-height: 120rpx;
    font-size: 26rpx;
    color: #7d829a;
    text-align: right;
}

.r-icon {
    display: inline-block;
    float: right;
    width: 32rpx;
    height: 32rpx;
    margin-top: 44rpx;
}

.contact-layer {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 100%;
    opacity: .5;
    background: #000;
}

.contact-box {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 10000;
    width: 550rpx;
    height: 454rpx;
    margin-left: -275rpx;
    margin-top: -247rpx;
    padding-top: 41rpx;
    background: #fff;
    border-radius: 20rpx;
}

.close {
    position: absolute;
    left: 0;
    top: 0;
    width: 84rpx;
    height: 84rpx;
}

.c-tip {
    line-height: 48rpx;
    font-size: 32rpx;
    color: #2a2e3d;
    text-align: center;
}

.color {
    color: #ef533d;
}

.QR-code {
    display: block;
    width: 280rpx;
    height: 268rpx;
    margin: 30rpx auto 0;
}

.getInfoBtn {
    position: relative;
    display: inline;
    margin-left: auto;
    margin-right: auto;
    padding-left: 0;
    padding-right: 0;
    box-sizing: border-box;
    font-size: 34rpx;
    text-align: left;
    text-decoration: none;
    line-height: 120rpx;
    border-radius: 0;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #2a2e3d;
    background-color: #ffffff;
    background: #ffffff;
}