}

.part3-list {
    display: inline-block;
    width: 345rpx;
    padding: 28rpx 0 48rpx 0;
}

.part3-img {
    display: inline-block;
    width: 66rpx;
    height: 66rpx;
    margin-left: 139rpx;
}

.part3-head {
    display: inline-block;
    width: 345rpx;
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 51rpx;
    text-align: center;
    font-weight: bold;
}

.part3-intro {
    display: inline-block;
    float: left;
    width: 345rpx;
    height: 32rpx;
    margin: 0;
    padding: 0;
