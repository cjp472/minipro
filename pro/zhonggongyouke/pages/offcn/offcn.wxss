    box-sizing: border-box;
    height: 994rpx;
    padding: 70rpx 30rpx 70rpx 30rpx;
}

.part4-list {
    display: inline-block;
    width: 326rpx;
    height: 356rpx;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx 5rpx #eee;
}

.part4-l {
    float: left;
}

.part4-r {
    float: right;
}

.part4-img {
    width: 326rpx;
