    background: #f5f5f5;
    margin-bottom: 28rpx;
}

.part4-txt {
    display: inline-block;
    float: left;
    width: 326rpx;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 22rpx;
    color: #333;
    text-align: left;
    text-indent: 32rpx;
