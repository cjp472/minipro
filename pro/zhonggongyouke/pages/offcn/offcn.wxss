.part6 {
    box-sizing: border-box;
    height: 391rpx;
    border-top: 2rpx solid #ef533d;
    padding-top: 50rpx;
}

.part6_1 {
    display: block;
    margin: 0 auto 25rpx;
    width: 327rpx;
    height: 70rpx;
}

.part6_2 {
    display: block;
    margin: 0 auto 20rpx;
    width: 145rpx;
    height: 145rpx;
}

.part6-txt {
    height: 32rpx;
    line-height: 32rpx;
    font-size: 20rpx;
    color: #666;
    text-align: center;
}

.goIndex {
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
    z-index: 1000000001;
    box-sizing: border-box;
    width: 90rpx;
    height: 90rpx;
    padding: 19rpx 16rpx;
    border-radius: 50%;
    text-align: center;
    background: #ef533d;
    line-height: 26rpx;
    white-space: normal;
    font-size: 22rpx;
    color: #fff;
}