.part5 {
    background: #f7f7f7;
    padding: 70rpx 30rpx;
}

.part5-head {
    height: 110rpx;
}

.part5-img {
    display: inline-block;
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
}

.part-5-top {
    display: inline-block;
