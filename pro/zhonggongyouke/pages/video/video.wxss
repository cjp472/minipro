video {
    display: block;
    width: 750rpx;
    height: 423rpx;
}

.content {
    padding: 18rpx 30rpx;
}

.title {
    line-height: 52rpx;
    font-size: 32rpx;
    color: #2a2e3d;
    font-weight: bold;
    text-align: justify;
}

.teacher {
    padding-top: 16rpx;
}

.teacher-info {
    width: 100%;
    height: 52rpx;
    margin-bottom: 13rpx;
}

.teacher-avatar {
    display: inline-block;
    float: left;
    width: 52rpx;
    height: 52rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    background: #f5f5f5;
}

.teacher-name {
    display: inline-block;
    width: auto;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 28rpx;
    color: #2a2e3d;
}

.teacher-intro {
    width: 100%;
    height: auto;
    line-height: 37rpx;
    font-size: 24rpx;
    color: #7d829a;
    text-align: justify;
}