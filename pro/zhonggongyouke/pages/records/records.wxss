.container {
    padding: 20rpx 42rpx 0 44rpx;
}

.list,.no-more {
    padding-left: 40rpx;
    padding-bottom: 20rpx;
    border-left: 3rpx solid #d7d9e3;
    position: relative;
}

.list .icon,.no-more .icon {
    position: absolute;
    background: #fff;
    left: -16rpx;
    top: 0rpx;
    width: 32rpx;
    height: 32rpx;
}

.list .icon image,.no-more .icon image {
    width: 100%;
    height: 100%;
}

.list .date {
    font-size: 32rpx;
    color: #ef533d;
    padding-bottom: 22rpx;
    line-height: 32rpx;
    font-weight: bold;
}

.orange {
    color: #f99a4a!important;
}

.list .records .record .time {
    font-size: 24rpx;
    color: #7d829a;
    line-height: 40rpx;
}

.list .records .record .detail {
    font-size: 28rpx;
    color: #2a2e3d;
    line-height: 46rpx;
    padding-bottom: 13rpx;
}

.no-more {
    padding-left: 44rpx;
    color: #d7d9e3;
    font-size: 28rpx;
    position: relative;
    border-left: none;
    padding-bottom: 48rpx;
    line-height: 28rpx;
}

.bg-img {
    display: block;
    width: 100%;
    height: 584rpx;
}

.bg-des {
    text-align: center;
    font-size: 30rpx;
    color: #7d829a;
    padding-bottom: 48rpx;
}

.bg-go {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    text-align: center;
    margin: 0 auto;
    font-size: 34rpx;
    color: #fff;
    background-color: #ef533d;
}