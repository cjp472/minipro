page {
    background: #f5f5f5;
}

.bf-fff {
    height: 100vh;
    background: #fff;
}

.list {
    box-sizing: border-box;
    position: relative;
    width: 100%;
    height: 207rpx;
    border-bottom: 10rpx solid #f5f5f5;
    padding: 0 30rpx;
    background: #fff;
}

.last {
    position: absolute;
    top: 30rpx;
    left: 185rpx;
    width: 83rpx;
    height: 31rpx;
    z-index: 9;
}

.last-txt {
    position: absolute;
    top: 30rpx;
    left: 185rpx;
    width: 83rpx;
    height: 28rpx;
    line-height: 28rpx;
    z-index: 10;
    text-align: center;
    font-size: 18rpx;
    color: #fff;
}

.head-map {
    display: inline-block;
    float: left;
    width: 243rpx;
    height: 137rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
    border-radius: 10rpx;
    background: #cccccc;
}

.des {
    position: relative;
    box-sizing: border-box;
    display: inline-block;
    float: left;
    width: 416rpx;
    height: 197rpx;
    padding-top: 25rpx;
}

.title {
    line-height: 42rpx;
    font-size: 28rpx;
    color: #2a2e3d;
    max-height: 84rpx;
    overflow: hidden;
}

.lessons {
    position: absolute;
    top: 145rpx;
    left: 0;
    height: 22rpx;
    line-height: 22rpx;
    font-size: 22rpx;
    color: #7d829a;
}

.color {
    color: #f99a4a;
}

.bg-img {
    display: block;
    width: 100%;
    height: 584rpx;
}

.bg-des {
    text-align: center;
    font-size: 30rpx;
    color: #7d829a;
    padding-bottom: 48rpx;
}

.bg-go {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    text-align: center;
    margin: 0 auto;
    font-size: 34rpx;
    color: #fff;
    background-color: #ef533d;
}