.addaddress {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    border-top: 10rpx solid #f5f5f5;
    border-bottom: 10rpx solid #f5f5f5;
    font-size: 30rpx;
    color: #7d829a;
}

.addaddress-img {
    display: inline-block;
    float: left;
    width: 32rpx;
    height: 32rpx;
    margin: 39rpx 20rpx 0 30rpx;
}

.editaddress {
    position: relative;
    padding: 22rpx 110rpx 22rpx 30rpx;
    border-bottom: 1rpx solid #dbdbdb;
}

.person-info {
    height: 46rpx;
    line-height: 46rpx;
    font-size: 32rpx;
    color: #2a2e3d;
    margin-bottom: 14rpx;
}

.address-info {
    line-height: 42rpx;
    font-size: 28rpx;
    color: #2a2e3d;
}

.address-edit {
    position: absolute;
    top: 63rpx;
    right: 30rpx;
    width: 48rpx;
    height: 72rpx;
}

.editaddress-img {
    display: block;
    width: 32rpx;
    height: 32rpx;
    margin: 0 auto;
}

.editaddress-txt {
    display: block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    color: #7d829a;
    text-align: center;
}