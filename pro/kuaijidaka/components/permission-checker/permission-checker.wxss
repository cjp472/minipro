.error {
    background: #ff7474;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    position: fixed;
    left: 0;
    top: -88rpx;
    z-index: 99999;
}

.successV2 {
    background: #16c786;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    position: fixed;
    left: 0;
    top: -88rpx;
    z-index: 99999;
}

.password-bg {
    position: fixed;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 10000;
    background: #22dd82 url(http://jingdaka.oss-cn-shanghai.aliyuncs.com/images/img_pwdbg.png);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: 750rpx;
    box-sizing: border-box;
}

.bg-inner {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 70rpx 30rpx 120rpx;
    box-sizing: border-box;
}

.bg-inner-fff {
    height: 100%;
    width: 100%;
    background-color: rgba(255,255,255,0.7);
    border-radius: 8rpx;
    position: relative;
}

.password {
    width: 630rpx;
    height: 110%;
    padding: 80rpx 0;
    box-sizing: border-box;
    z-index: 10000;
    text-align: center;
    background: #fff;
    box-shadow: 0px 10px 40px 0px rgba(0,0,0,0.1);
    border-radius: 8rpx;
    position: absolute;
    left: 50%;
    top: -5%;
    margin-left: -315rpx;
}

.h2 {
    font-size: 42rpx;
    color: #3c4856;
}

.tips {
    font-size: 28rpx;
    color: #8b97a4;
    margin-top: 20rpx;
}

.input {
    width: 520rpx;
    margin: 60rpx auto 80rpx;
    height: 84rpx;
    line-height: 84rpx;
    color: #8b97a4;
    font-size: 28rpx;
    text-align: center;
    background-color: #f6f8f9;
    border-radius: 8rpx;
    border: solid 1rpx #d9e1e9;
}

.button {
    width: 530rpx;
    border-radius: 10rpx;
    margin: 20rpx auto 20rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #22dd82;
    font-size: 36rpx;
    text-align: center;
    color: #fff;
}

.button--secondary {
    background: #1ac974;
    color: #6be8ac;
    border: 1rpx solid #6be8ac;
}

button::after {
    border: none;
}

.button-getPass {
    width: 530rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: #fff;
    border-radius: 10rpx;
    color: #8b97a4;
    border: 1px solid #d9e1e9;
}

.goHome {
    width: 300rpx;
    font-size: 26rpx;
    color: #8b97a4;
    position: absolute;
    bottom: 80rpx;
    left: 50%;
    margin-left: -150rpx;
}

.mt420 {
    margin-top: 420rpx;
}