@import "../../../__wuBaseWxss__/8.wxss";

.btn-hover-class {
    opacity: 0.3!important;
}

.actions {
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 30rpx 30rpx 30rpx;
}

.date__container {
    float: left;
}

.date {
    font-size: 22rpx;
    color: #8b97a4;
}

.date--update {
    display: block;
    margin-top: -28rpx;
}

.visible {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}

.visible .ico {
    background-position: -80rpx -91rpx;
    width: 40rpx;
    height: 40rpx;
    transform: scale(0.5);
    position: relative;
    top: -10rpx;
    left: -10rpx;
    margin-right: -10rpx;
}

.visible text {
    font-size: 21rpx;
    color: #c4c8cc;
    line-height: 20rpx;
}

.buttons {
    float: right;
}

.button {
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid #eee;
    padding: 0;
    margin: 0;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #8b97a4;
    padding-left: 26rpx;
    float: left;
    border-radius: 10rpx;
    position: relative;
}

.buttons .ico {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 30rpx;
    top: 50%;
    margin-top: -13rpx;
}

.button--comment .ico {
    background-position: 0rpx 0rpx;
}

.button--praise .ico {
    background-position: -30rpx 0rpx;
}

.praised {
    border-color: rgb(253,90,21);
    color: rgb(253,90,21);
}

.praised .ico {
    background-position: -60rpx 0rpx;
}

.shade-button {
    border: none!important;
}

.button--formid {
    box-sizing: unset!important;
    background-color: transparent;
}

.button--formid::after {
    display: none;
}

.comments {
    color: #3c4856;
    font-size: 26rpx;
    padding: 30rpx;
    padding-bottom: 10rpx;
    background: #f8fafb;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.praises {
    line-height: 40rpx;
    color: #8b97a4;
    background: url(http://static3topen.jingdaka.com/images/ico_zhang1.png);
    background-repeat: no-repeat;
    background-size: 30rpx;
    background-position: 5rpx 8rpx;
    text-indent: 45rpx;
    margin-bottom: 20rpx;
}

.split-line {
    border-bottom: 1rpx solid #eee;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.comment__container {
    line-height: 30rpx;
    margin: 15rpx 0 30rpx;
}

.comment__container text {
    word-wrap: break-word;
}

.comment__username {
    display: inline-block;
    color: #5093d2;
    font-weight: bold;
}

.comment__username--admin {
    color: #fd5a15;
}

.comment__pictures {
    font-size: 26rpx;
    color: #5093d2;
    display: inline-block;
    margin: 0 10rpx;
}

.comment__voice {
    display: inline-block;
    position: relative;
    top: 15rpx;
    margin-top: -15rpx;
    margin-left: 10rpx;
}

.comment__reply {
    display: inline-block;
}

.reply__container {
    position: relative;
    z-index: 10000;
    display: block;
}

.reply__mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0;
    background: #000;
    opacity: 0.5;
    z-index: 88;
}

.reply__input {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 10000;
    background-color: white;
    padding: 15rpx 20rpx;
    box-sizing: border-box;
}

.input-reply {
    min-height: 55rpx;
    border: solid 1rpx #e8e8e8;
    border-radius: 10rpx;
    display: inline-block;
    width: 500rpx;
    margin-right: 40rpx;
    padding-left: 20rpx;
}

.input__placeholder {
    color: #d3d3d3;
    font-size: 32rpx;
    line-height: 88rpx;
    padding-left: 20rpx;
}

.reply-container button {
    float: right;
}

.inline-block {
    display: inline;
}

.word-wrap {
    word-wrap: break-word;
    word-break: break-all;
    white-space: pre-line;
}