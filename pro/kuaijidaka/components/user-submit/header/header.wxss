@import "../../../__wuBaseWxss__/8.wxss";

.btn-hover-class {
    opacity: 0.3!important;
}

.header {
    padding: 0 30rpx 10rpx 30rpx;
}

.avatar__container {
    float: left;
    box-shadow: 0px 10px 10px 0px rgba(0,0,0,0.14),0px 4px 2px 0px rgba(0,0,0,0.04);
    width: 88rpx;
    height: 88rpx;
    border-radius: 88rpx;
    border: 4rpx solid #fff;
}

.avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 88rpx;
}

.info {
    float: left;
    margin-left: 20rpx;
    padding-top: 10rpx;
}

.username {
    width: 100%!important;
    max-width: 450rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #3c4856;
}

.score {
    position: relative;
    display: inline-block;
    margin-right: 50rpx;
}

.score__ico {
    width: 150rpx;
    height: 30rpx;
    display: block;
    float: left;
    margin-top: 10rpx;
    margin-right: 10rpx;
    background-position: -150rpx -330rpx;
}

.score--1 .score__ico {
    background-position: -150rpx -330rpx;
}

.score--2 .score__ico {
    background-position: 0 -360rpx;
}

.score--3 .score__ico {
    background-position: -150rpx -360rpx;
}

.score--4 .score__ico {
    background-position: 0 -390rpx;
}

.score--5 .score__ico {
    background-position: -150rpx -390rpx;
}

.score__text {
    font-size: 36rpx;
    color: #ffd200;
    font-weight: bold;
    font-style: italic;
    margin-right: 5rpx;
    position: absolute;
    top: 0;
    left: 160rpx;
}

.operation {
    width: 100rpx;
    height: 136rpx;
    display: block;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 50;
}

.operation__ico {
    width: 50rpx;
    height: 50rpx;
    background-position: -100rpx -180rpx;
    top: 43rpx;
    position: absolute;
    right: 30rpx;
}

.button--edit {
    float: right;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin: 20rpx;
    font-size: 24rpx;
    color: #8b97a4;
    position: relative;
}

.study {
    width: 144rpx;
    height: 60rpx;
    border-radius: 10rpx;
}

.button__ico--edit {
    background-position: -40rpx -635rpx;
    width: 40rpx;
    height: 40rpx;
    left: 30rpx;
    top: 50%;
    margin-top: -18rpx;
}

.how-long {
    display: inline-block;
    font-size: 22rpx;
    color: #8b97a4;
    position: relative;
    top: -5rpx;
    margin-bottom: -5rpx;
}

.header--message {
    padding: 0 30rpx 0;
}

.time {
    color: #3c4856;
    font-size: 30rpx;
    padding-left: 40rpx;
    position: relative;
}

.ico--time {
    background-position: -210rpx 0;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 0rpx;
    top: 50%;
    margin-top: -15rpx;
}

.title {
    position: relative;
    padding-left: 40rpx;
    color: #22dd82;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.title--admin {
    color: #4f598f;
}

.ico--title {
    background-position: -122rpx -640rpx;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 5rpx;
    top: 50%;
    margin-top: -15rpx;
}

.header--message .button--edit {
    margin-top: -80rpx;
}

.retry__text {
    position: relative;
    top: -10rpx;
}

.praises {
    float: right;
    font-size: 24rpx;
    color: #c4c8cc;
    height: 40rpx;
    display: flex;
    align-items: center;
    margin-top: 24rpx;
}

.praises text {
    line-height: 40rpx;
}

.praises .ico {
    background-position: -96rpx -1645rpx;
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.beyond_1 {
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.practice_edit {
    width: 144rpx;
    height: 60rpx;
    border-radius: 4px;
    border: 2rpx solid #eee;
    text-align: center;
    line-height: 60rpx;
}