.hybrid-loading {
    width: 32rpx;
    height: 32rpx;
    position: relative;
}

.hybrid-loading .line view {
    position: absolute;
    left: 16rpx;
    top: 0;
    width: 2rpx;
    height: 32rpx;
}

.hybrid-loading .line view:before,.hybrid-loading .line view:after {
    content: '';
    display: block;
    height: 50%;
    background: #fff;
    border-radius: 5rpx;
}

.hybrid-loading .line view:nth-child(2) {
    -webkit-transform: rotate(30deg);
}

.hybrid-loading .line view:nth-child(3) {
    -webkit-transform: rotate(60deg);
}

.hybrid-loading .line view:nth-child(4) {
    -webkit-transform: rotate(90deg);
}

.hybrid-loading .line view:nth-child(5) {
    -webkit-transform: rotate(120deg);
}

.hybrid-loading .line view:nth-child(6) {
    -webkit-transform: rotate(150deg);
}

.hybrid-loading .circlebg {
    position: absolute;
    top: 8rpx;
    left: 8rpx;
    width: 16rpx;
    height: 16rpx;
    background: #666;
    border-radius: 16rpx;
}

@-webkit-keyframes load {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.hybrid-loading .line view:nth-child(1):before {
    -webkit-animation: load 1.2s linear 0s infinite;
}

.hybrid-loading .line view:nth-child(2):before {
    -webkit-animation: load 1.2s linear 0.1s infinite;
}

.hybrid-loading .line view:nth-child(3):before {
    -webkit-animation: load 1.2s linear 0.2s infinite;
}

.hybrid-loading .line view:nth-child(4):before {
    -webkit-animation: load 1.2s linear 0.3s infinite;
}

.hybrid-loading .line view:nth-child(5):before {
    -webkit-animation: load 1.2s linear 0.4s infinite;
}

.hybrid-loading .line view:nth-child(6):before {
    -webkit-animation: load 1.2s linear 0.5s infinite;
}

.hybrid-loading .line view:nth-child(1):after {
    -webkit-animation: load 1.2s linear 0.6s infinite;
}

.hybrid-loading .line view:nth-child(2):after {
    -webkit-animation: load 1.2s linear 0.7s infinite;
}

.hybrid-loading .line view:nth-child(3):after {
    -webkit-animation: load 1.2s linear 0.8s infinite;
}

.hybrid-loading .line view:nth-child(4):after {
    -webkit-animation: load 1.2s linear 0.9s infinite;
}

.hybrid-loading .line view:nth-child(5):after {
    -webkit-animation: load 1.2s linear 1s infinite;
}

.hybrid-loading .line view:nth-child(6):after {
    -webkit-animation: load 1.2s linear 1.1s infinite;
}

