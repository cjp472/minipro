.qr-box-pc {
    margin-bottom: 30rpx;
}

.QR-sheet .content {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    z-index: 99999;
}

.QR-sheet .i {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    z-index: 88;
}

.QR-sheet .recognize {
    width: 100%;
    height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    border-bottom: 1rpx solid #D9D9D9;
    color: #3c4856;
    line-height: 100rpx;
    background-color: #fff;
}

.QR-sheet .cancel {
    width: 100%;
    height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    border-bottom: 1rpx solid #D9D9D9;
    color: #8b97a4;
    line-height: 100rpx;
}

.clear-button-style {
    padding: 0;
    text-align: left;
    border: none;
    border-radius: 0;
    box-sizing: content-box;
    position: static;
}

.clear-button-style::before,.clear-button-style::after {
    content: '';
    width: 0;
    height: 0;
}