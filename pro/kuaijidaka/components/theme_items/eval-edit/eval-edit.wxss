@import "../../../__wuBaseWxss__/8.wxss";

@import "../../../__wuBaseWxss__/6.wxss";

@import "../../../__wuBaseWxss__/9.wxss";

.record__box {
    position: relative;
    z-index: 100000;
    display: block;
}

.record__shade {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    z-index: 88;
}

.record__main {
    background: #fff;
    position: fixed;
    z-index: 9999;
    width: 690rpx;
    border-radius: 8rpx;
    left: 30rpx;
    bottom: 148rpx;
}

.record__bottom {
    background: #fff;
    position: fixed;
    z-index: 9999;
    width: 690rpx;
    height: 98rpx;
    border-radius: 8rpx;
    left: 30rpx;
    bottom: 30rpx;
    font-size: 30rpx;
    line-height: 98rpx;
    text-align: center;
    color: #22dd82;
}

.record__operator {
    border-top: 1rpx solid #d9e1e9;
    padding: 30rpx 285rpx 30rpx 120rpx;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    text-align: center;
    height: 160rpx;
    font-size: 30rpx;
    color: #8a97a4;
    position: relative;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.record__replay {
    margin-right: 80rpx;
}

.record__replay .ico {
    width: 88rpx;
    height: 88rpx;
}

.record__replay.play .ico {
    background-position: -211rpx -1298rpx;
}

.record__replay.pause .ico {
    background-position: -118rpx -1298rpx;
}

.record__button .icon {
    width: 120rpx;
    height: 120rpx;
}

.record__button.first .icon {
    background-position: -23rpx -1050rpx;
}

.record__button.recording .icon {
    background-position: -583rpx -1050rpx;
}

.record__button.again .icon {
    background-position: -303rpx -1050rpx;
}

.pronun-box-pc .recorder-content {
    width: 646rpx;
    overflow: hidden;
    padding: 20rpx;
    position: relative;
}

.recorder__content {
    width: 586rpx!important;
}

.recorder__content.blank {
    padding: 0;
    border: none;
}

.reupload {
    width: 158rpx;
    height: 32rpx;
    border-radius: 48rpx;
    background-color: #ff7474;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -24rpx;
    margin-left: -99rpx;
    display: flex;
    padding: 8rpx 20rpx;
}

.reupload text {
    font-size: 24rpx;
    color: #fff;
    margin-left: 10rpx;
    line-height: 32rpx;
}

.reupload .ico {
    margin-top: -4rpx;
    width: 40rpx;
    height: 40rpx;
    background-position: -89rpx -796rpx;
}

.record__bubble {
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 25rpx;
    padding: 0 30rpx;
    background-color: #666;
    opacity: 0.6;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    top: -56rpx;
    left: 50%;
    transform: translate(-50%);
}

.record__bubble .triangle {
    position: absolute;
    left: 50%;
    margin-left: -14rpx;
    bottom: -13rpx;
    border-left: 15rpx solid transparent;
    border-right: 15rpx solid transparent;
    border-top: 15rpx solid #666;
}