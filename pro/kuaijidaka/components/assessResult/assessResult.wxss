}

.assess-tips {
    width: 260rpx;
    height: 36rpx;
    background: rgba(248,250,251,1);
    border-radius: 4rpx;
    border: 1rpx solid rgba(236,240,243,1);
    font-size: 20rpx;
    color: #8b97a4;
    text-align: center;
    line-height: 36rpx;
    margin: 14rpx 0;
}