.laud_button {
    position: relative;
}

button::after {
    content: '';
    border: none;
}

.shade_button {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0);
    position: absolute;
    left: 0;
    top: 0;
    color: red;
}

.sign-bg {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10001;
    opacity: 0;
    transform: translate3d(0,0,0);
}

.sign-bg-in {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: -2000px;
    z-index: 10002;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.sign-pic {
    width: 560rpx;
    height: auto;
    position: relative;
}

.offButton-top {
    width: 70rpx;
    height: 70rpx;
    border-radius: 0 0 0 100%;
    background: rgba(0,0,0,.6) url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: 28rpx 18rpx;
    background-size: 28rpx;
    color: #fff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 2;
}

.flex-center {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

