.loader-bg {
    margin-top: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #8b97a4;
}

.loader {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    margin-right: 10rpx;
    position: relative;
    border-top: 4rpx solid rgba(34,221,130,0.4);
    border-right: 4rpx solid rgba(34,221,130,0.4);
    border-left: 4rpx solid #22dd82;
    border-bottom: 4rpx solid #22dd82;
    animation: loading 1s infinite linear;
}

.loader.loader2 {
    border-top: 4rpx solid rgba(79,89,143,0.4);
    border-right: 4rpx solid rgba(79,89,143,0.4);
    border-left: 4rpx solid #4f598f;
    border-bottom: 4rpx solid #4f598f;
}

@-webkit-keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.no-more {
    margin-top: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #8b97a4;
}