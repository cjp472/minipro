.content_bg {
    width: 100%;
    height: 100%;
    padding: 130rpx 30rpx;
    box-sizing: border-box;
    background: url(http://static3topen.jingdaka.com/images/share_page_bg_user.png?v=1) no-repeat;
    background-size: cover;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10000;
    color: #3c4856;
}

.content_bg.admin {
    background: url(http://static3topen.jingdaka.com/images/share_page_bg_admin.png?v=1) no-repeat;
    background-size: cover;
}

.user_info {
    background-color: #fff;
    box-shadow: 0px 4rpx 30rpx 0rpx rgba(0,0,0,0.1);
    border-radius: 20rpx;
    margin: 0 auto;
    position: relative;
    padding: 110rpx 30rpx 20rpx;
    box-sizing: border-box;
    text-align: center;
}

.user_info .photo {
    width: 140rpx;
    height: 140rpx;
    background: #eee;
    border: 2px solid #fff;
    border-radius: 100%;
    overflow: hidden;
    position: absolute;
    left: 50%;
    top: 0;
    margin-left: -70rpx;
    margin-top: -70rpx;
    box-shadow: 0px 10rpx 10rpx 0rpx rgba(0,0,0,0.14);
}

.user_data {
    padding: 70rpx 0 60rpx;
}

.user_data .title {
    height: 82rpx;
    font-size: 32rpx;
    color: #22dd82;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30rpx;
    line-height: 82rpx;
    font-weight: 600;
}

.admin .user_data .title {
    color: #7878E0;
}

.user_data .title .center {
    width: 500rpx;
    height: 82rpx;
    background: #def7ea;
}

.admin .user_data .title .center {
    background: #ebebfb;
}

.user_data .title .left {
    width: 60rpx;
    height: 82rpx;
    background: url(http://static3topen.jingdaka.com/images/share_title_user.png?v=2) no-repeat;
    background-size: cover;
}

.admin .user_data .title .left {
    background: url(http://static3topen.jingdaka.com/images/share_title_admin.png?v=2) no-repeat;
    background-size: cover;
}

.user_data .title .right {
    width: 60rpx;
    height: 82rpx;
    background: url(http://static3topen.jingdaka.com/images/share_title_user.png?v=2) no-repeat;
    background-size: cover;
    transform: rotate(180deg);
}

.admin .user_data .title .right {
    background: url(http://static3topen.jingdaka.com/images/share_title_admin.png?v=2) no-repeat;
    background-size: cover;
    transform: rotate(180deg);
}

