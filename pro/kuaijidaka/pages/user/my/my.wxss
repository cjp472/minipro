page {
    background: #edf0f3;
    background-position: bottom center;
    background-size: 116rpx;
}

.container--white {
    background-color: white;
    padding-bottom: 250rpx;
}

.list-li {
    margin-top: 30rpx;
    padding-bottom: 120rpx;
}

.item {
    background: #fff;
    margin: 30rpx;
    padding-bottom: 0;
    border-radius: 8rpx;
    position: relative;
}

.item .title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.item .title .tit {
    color: #3c4856;
    font-size: 34rpx;
    line-height: 46rpx;
    padding: 0 30rpx;
    width: 600rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list-li .end-time .title .tit {
    color: #c7c7c7;
}

.list-li .item .title .right {
    margin-right: 30rpx;
    margin-top: 0;
    display: none;
}

.list-li .end-time .title .right {
    display: block;
}

.list-li .item .title .right text {
    font-size: 22rpx;
    background: #c2c7cd;
    color: #fff;
    height: 40rpx;
    width: 108rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 10rpx;
    display: block;
}

.list-li .item .title .right text.bgwhite {
    background: #fff;
}

.list-li .item .bottom {
    padding: 0 30rpx;
    line-height: 46rpx;
    margin-top: 10rpx;
    overflow: hidden;
}

.list-li .item .bottom .left {
    font-size: 26rpx;
    color: #999;
    width: 210rpx;
    text-align: left;
    float: left;
}

.list-li .end-time .bottom .left {
    color: #c7c7c7;
}

.list-li .item .bottom .left .count {
    width: 100%;
    float: left;
}

.list-li .item .bottom .left .count .digital {
    color: #3c4856;
}

.list-li .end-time .bottom .left .count .digital {
    color: #c7c7c7;
}

.list-li .bottom .right {
    float: right;
    position: relative;
}

.list-li .end-time .bottom .right .end {
    font-size: 22rpx;
    background: #c2c7cd;
    border: 1rpx solid #c2c7cd;
    color: #fff;
    height: 40rpx;
    width: 108rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 6rpx;
    display: block;
}

.list-li .item .bottom .right .no-started {
    font-size: 22rpx;
    background: #fff;
    border: 1rpx solid #c2c7cd;
    color: #c2c7cd;
    height: 40rpx;
    width: 108rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 6rpx;
    display: block;
}

.list-li .item .bottom .right .massage {
    width: 30rpx;
    height: 30rpx;
    background-position: -269rpx 0;
    position: absolute;
    right: 0rpx;
    top: 10rpx;
}

.list-li .item .bottom-nav {
    overflow: hidden;
    background: #f8fafb;
    padding: 30rpx;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.list-li .item .bottom-nav .dl {
    display: inline-block;
    width: 210rpx;
}

.bottom-nav .ico-container {
    display: flex;
    align-items: center;
}

.list-li .item .bottom-nav .dl .ico {
    width: 30rpx;
    height: 30rpx;
    margin-right: 6rpx;
    display: inline-block;
}

.list-li .item .bottom-nav .ranking .ico {
    background-position: 0 -30rpx;
}

.list-li .item .bottom-nav .ruli .ico {
    background-position: -60rpx -30rpx;
}

.list-li .item .bottom-nav .homework .ico {
    background-position: -86rpx -638rpx;
}

.list-li .item .bottom-nav .invite .ico {
    background-position: -49rpx -1605rpx;
}

.list-li .item .bottom-nav .dl text {
    font-size: 26rpx;
    color: #8b97a4;
}

.list-li .item .bottom-nav .dl .strong {
    width: 2rpx;
    height: 23rpx;
    margin-left: 48rpx;
    background: #eee;
}

.nodata {
    padding: 200rpx 0 100rpx;
}

.nodata .strong {
