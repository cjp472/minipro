page {
    background-color: #f2f4f5!important;
}

.discovery__top-bar {
    width: 100%;
    height: 80rpx;
    background-color: #f2f4f5;
}

.discovery__button-box {
    margin: -60rpx auto 40rpx;
    width: 690rpx!important;
    height: 400rpx!important;
    border-radius: 8rpx!important;
}

.discovery__top-banner {
    width: 690rpx;
    height: 400rpx;
    border-radius: 8rpx;
}

.discovery__list {
    margin: 0 30rpx;
    padding-bottom: 100rpx;
    background-color: #f2f4f5;
}

.discovery__title {
    font-size: 30rpx;
    color: #8b97a4;
    margin: 40rpx 0 20rpx;
}

.no-top.discovery__title {
    margin-top: 0;
}

.discovery__items {
    border-radius: 8rpx;
    width: 690rpx;
    height: 436rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.discovery__cover {
    width: 690rpx;
    height: 300rpx;
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
}

.discovery__course-title {
    font-size: 34rpx;
    color: #3c4856;
    margin: 20rpx 30rpx 10rpx;
    line-height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.discovery__detail {
    font-size: 20rpx;
    color: #8b97a4;
    display: flex;
    margin-left: 30rpx;
    line-height: 28rpx;
}

.discovery__line {
    color: #c4c8cc;
}

.discovery__detail view {
    margin-right: 20rpx;
}

.discovery-no-data {
    margin: 20rpx auto;
    color: #8b97a4;
    text-align: center;
}

.clear-button-style {
    border-radius: 8rpx;
    width: 690rpx;
    height: 436rpx;
}

.discovery__list .clear-button-style {
    margin-bottom: 20rpx;
}

.nodata {
    padding-top: 340rpx;
    background-color: #f2f4f5!important;
}

.title-top {
    width: 100%;
    background: #22dd82 url(http://static3topen.jingdaka.com/images/bg_toplogin.png);
    background-repeat: no-repeat;
    background-size: 750rpx;
    height: 285rpx;
}

.relative {
    position: relative;
}

.logo {
    position: absolute;
    top: -120rpx;
    left: 50%;
    margin-left: -103rpx;
}

.logo .img {
    background-repeat: no-repeat;
    background-size: 206rpx;
    width: 206rpx;
    height: 206rpx;
    border-radius: 206rpx;
}

.logo .h2 {
    font-size: 36rpx;
    color: #3c4856;
    width: 206rpx;
    text-align: center;
    padding-top: 30rpx;
}

.login {
    margin-top: 450rpx;
}

.login__btn button {
    width: 249rpx;
    height: 76rpx;
    border: 1px solid #22dd82;
    background: #fff;
    line-height: 75rpx;
    text-align: center;
    border-radius: 10rpx;
    margin: 0 auto;
    font-size: 36rpx;
    color: #22dd82;
}

.login__btn button::after {
    content: none;
}

.login .p {
    text-align: center;
    font-size: 30rpx;
    color: #8b97a4;
    padding: 30rpx 0;
}