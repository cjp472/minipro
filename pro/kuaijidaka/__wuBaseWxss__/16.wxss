    width: 110rpx;
}

.detail-bottom .fr .li {
    width: 110rpx;
}

.stick {
    width: 75rpx;
    height: 75rpx;
    position: absolute;
    z-index: 99;
    top: -5rpx;
    right: -5rpx;
}

.stick .ico {
    width: 75rpx;
    height: 75rpx;
    background-position: 0 -520rpx;
}

.day {
    float: left;
    font-size: 22rpx;
    color: #8b97a4;
    margin-top: 10rpx;
    height: 30rpx;
    line-height: 30rpx;
}