.course-inform .i {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    z-index: 88;
}

.course-inform .inform-content {
    background: #fff;
    position: fixed;
    top: 20%;
    left: 75rpx;
    z-index: 99999;
    width: 600rpx;
    border-radius: 8rpx;
    padding-top: 40rpx;
}

.course-inform .inform-content .ico {
    background-position: -208rpx -65rpx;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 40rpx;
    right: 30rpx;
}

.course-inform .inform-content .title {
    font-size: 32rpx;
    color: #3c4856;
    text-align: center;
}

.course-inform .inform-content .inform-hybrid {
    margin: 35rpx 30rpx 25rpx;
    width: 540rpx;
    height: 440rpx;
    overflow: hidden;
}

.course-inform .inform-content .operation {
    width: 600rpx;
    height: 90rpx;
    border-top: 1rpx solid #ededed;
}

.course-inform .inform-content .operation .detail {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #69da8a;
    text-align: center;
}