.public {
    position: relative;
    z-index: 1000;
    display: block;
}

.public .public-content {
    background: #fff;
    position: fixed;
    top: 40%;
    left: 50%;
    z-index: 99999;
    width: 600rpx;
    margin-left: -300rpx;
    margin-top: -220rpx;
    border-radius: 20rpx;
    padding-top: 70rpx;
}

.public .public-content .h2 {
    font-size: 36rpx;
    font-weight: normal;
    padding: 0 20rpx;
    color: #3c4856;
    position: relative;
    text-align: center;
}

.public .public-content .p {
    font-size: 30rpx;
    line-height: 40rpx;
    margin-top: 50rpx;
    padding: 0 40rpx;
    color: #666;
    text-align: center;
}

.public .public-content .p .inputext {
    height: 86rpx;
    text-align: left;
    padding: 0 20rpx;
}

.public .public-content .p textarea {
    width: 460rpx;
    height: 230rpx;
    border: 1rpx solid #c4c8cc;
    background: #eee;
    padding: 30rpx;
    font-size: 30rpx;
    color: #3c4856;
}

.public .public-content .btn {
    line-height: 100rpx;
    width: 100%;
    height: 100rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top: 1rpx solid #eaeaea;
    padding: 0;
    margin: 0;
    margin-top: 60rpx;
}

.public .public-content .btn text {
    font-size: 36rpx;
    color: #22dd82;
}

.public .public-content .btn.btn50 text {
    width: 50%;
    text-align: center;
}

.public .public-content .btn.btn50 text:nth-of-type(1) {
    color: #3c4856;
}

.public .public-content .btn .online {
    position: absolute;
    width: 1rpx;
    height: 100rpx;
    background: #eaeaea;
    border-right: 1rpx solid #eaeaea;
    display: block;
    top: 0;
    left: 50%;
}

.public .i {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0;
    background: #000;
    opacity: 0.5;
    z-index: 88;
}

.dialog-title {
    font-size: 36rpx;
    text-align: left;
    margin-bottom: 20rpx;
}

.dialog-body {
    padding: 0 40rpx;
}

.dialog-text {
    font-size: 28rpx;
    color: #999;
    margin-bottom: 40rpx;
    line-height: 40rpx;
}

.dialog-body input {
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 8rpx;
    background-color: #edf0f3;
    padding-left: 20rpx;
}