.detail-content {
    padding: 20rpx 30rpx;
    color: #3c4856;
    overflow: hidden;
}

.detail-content .auto {
    height: auto;
    display: block;
}

.detail-content text {
    font-size: 28rpx;
    word-wrap: break-word;
    line-height: 32rpx;
}

.detail-content .bindclick {
    font-size: 28rpx;
    color: #5bd891;
    margin-top: 20rpx;
}

.detail-content .img {
    display: flex;
    flex-flow: row wrap;
    margin-top: 30rpx;
    width: 620rpx;
}

.detail-content .four {
    width: 500rpx;
}

.detail-content .img view {
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.detail-content .img image {
    width: 160rpx;
    height: 160rpx;
    display: block;
}

.detail-content .voice {
    background: #22dd82;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 8rpx;
    margin-top: 20rpx;
    float: left;
    margin-bottom: 20rpx;
}

.detail-content .voice .btns {
    width: 60rpx;
    height: 60rpx;
    margin: 0 10rpx;
    background-position: 0 -416rpx;
    float: left;
}

.detail-content .voice.play .btns {
    width: 60rpx;
    height: 60rpx;
    margin: 4rpx 10rpx;
    background-position: -60rpx -420rpx;
    float: left;
}

.detail-content .voice .span {
    float: left;
    width: 288rpx;
    height: 68rpx;
    position: relative;
}

.detail-content .voice .span .schedule {
    width: 100%;
    height: 4rpx;
    background: #16c786;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -2rpx;
    border-radius: 2rpx;
}

.detail-content .voice .span .speed {
    width: 60rpx;
    height: 4rpx;
    background: #eafff5;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -2rpx;
    border-radius: 2rpx;
}

.detail-content .voice .span .speed span {
    position: relative;
    display: block;
}

.detail-content .voice .span .speed span em {
    position: absolute;
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    top: -1rpx;
    right: -3rpx;
    background: #fff;
}

.detail-content .voice .time {
    font-size: 26rpx;
    color: #fff;
    float: left;
    width: 80rpx;
    text-align: center;
}

.detail-bottom {
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 30rpx 30rpx 30rpx;
}

.detail-bottom .fl {
    float: left;
}

.detail-bottom .fl text {
    font-size: 22rpx;
    color: #8b97a4;
}

.detail-bottom .fr {
    float: right;
}

.detail-bottom .fr .li {
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid #eee;
    padding: 0;
    margin: 0 10rpx;
    font-size: 24rpx;
    color: #8b97a4;
    padding-left: 26rpx;
    float: left;
    border-radius: 10rpx;
}

.detail-bottom .fr .li.selected {
    border: 2rpx solid #fd5a15;
    color: #fd5a15;
}

.detail-bottom .fr .li span {
    position: relative;
}

.detail-bottom .fr .li .ico {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: -36rpx;
    top: 50%;
    margin-top: -13rpx;
}

.detail-bottom .fr .comment .ico {
    background-position: 0rpx 0rpx;
}

.detail-bottom .fr .thumbs .ico {
    background-position: -30rpx 0rpx;
}

.detail-bottom .fr .thumbs.selected .ico {
    background-position: -60rpx 0rpx;
}

.detail-message {
    color: #3c4856;
    font-size: 26rpx;
    padding: 30rpx;
    padding-bottom: 10rpx;
    background: #f8fafb;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.detail-message .thumbs-up {
    line-height: 40rpx;
    color: #8b97a4;
    background: url(https://cdn-qiye.jingdaka.com/images/ico_zhang1.png);
    background-repeat: no-repeat;
    background-size: 30rpx;
    background-position: 5rpx 8rpx;
    text-indent: 45rpx;
    margin-bottom: 20rpx;
}

.detail-message .online {
    border-bottom: 1rpx solid #eee;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.detail-message .thumbs-up image {
    width: 20rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.detail-message .thumbs-up .t {
    color: #fd5a15;
}

.detail-message .mess-item {
    line-height: 30rpx;
    margin: 15rpx 0 30rpx;
}

.detail-message .t {
    overflow: hidden;
}

.detail-message label {
    font-weight: bold;
}

.detail-message .t label {
    position: relative;
    z-index: 30;
    padding-left: 32rpx;
    background: url(https://cdn-qiye.jingdaka.com/images/v2.png);
    background-repeat: no-repeat;
    background-size: 30rpx;
    background-position: center left;
    float: left;
    color: #fd5a15;
}

.detail-message .voice {
    background: #22dd82;
