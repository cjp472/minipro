    line-height: 48rpx;
    border-radius: 8rpx;
    margin-top: 16rpx;
    float: left;
    margin-bottom: 20rpx;
}

.detail-message .voice .btns {
    width: 40rpx;
    height: 40rpx;
    margin: 6rpx 6rpx 6rpx 16rpx;
    background-position: -178rpx -713rpx;
    float: left;
}

.detail-message .voice.play .btns {
    width: 40rpx;
    height: 40rpx;
    margin: 6rpx 6rpx 6rpx 16rpx;
    background-position: -141rpx -713rpx;
    float: left;
}

.detail-message .voice .span {
    float: left;
    width: 288rpx;
    height: 40rpx;
    position: relative;
}

.detail-message .voice .span .schedule {
    width: 100%;
    height: 4rpx;
