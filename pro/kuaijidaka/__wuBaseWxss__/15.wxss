.detail-message .voice .span .speed {
    width: 60rpx;
    height: 4rpx;
    background: #eafff5;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -2rpx;
    border-radius: 2rpx;
}

.detail-message .voice .span .speed span {
    position: relative;
    display: block;
}

.detail-message .voice .span .speed span em {
    position: absolute;
    width: 8rpx;
