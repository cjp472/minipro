    border-radius: 50%;
    top: -1rpx;
    right: -3rpx;
    background: #fff;
}

.detail-message .voice .time {
    font-size: 26rpx;
    color: #fff;
    float: left;
    text-align: center;
    padding-right: 20rpx;
}

.detail-message .tvoice label {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.detail-message .t text {
    float: left;
    word-break: break-all;
}

.detail-message .tvoice text {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.detail-message .tvoice .voice {
    margin-top: 11rpx;
    margin-bottom: 0;
}

.slideController {
    background-position: -90rpx -578rpx;
    width: 74rpx;
    height: 44rpx;
}

.slideController.confirm {
    background-position: -90rpx -522rpx;
}

.slideController .slideBall {
    background-position: -181rpx -522rpx;
    width: 42rpx;
    height: 42rpx;
    margin: 1rpx 0;
    position: relative;
    left: -1rpx;
    transition: all 0.4s;
}

.slideController.confirm .slideBall {
    left: 33rpx;
}