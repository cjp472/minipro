@import "pages/shared/actionSheet/actionSheet.wxss";

@import "pages/shared/modal/modal.wxss";

@import "pages/shared/globalMsg/globalMsg.wxss";

@import "pages/shared/player/player.wxss";

@import "pages/shared/star/star.wxss";

@import "pages/shared/tab/tab.wxss";

page {
    font-family: 'PingFangSC-Regular';
    background: #fff;
}

.no-scroll {
    overflow: hidden;
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
}

.container {
    display: block;
    height: 100%;
    box-sizing: border-box;
    background: #fff;
}

.container-footer-empty {
    padding-bottom: 110rpx;
    min-height: 100vh;
}

.bg-gray {
    background: #f0f0f0;
}

.container.container-index:before {
    height: 0;
}

.line-ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.searchLink {
    position: relative;
    margin: 24rpx 0;
    padding: 0 30rpx;
}

.searchLink-icon {
    position: absolute;
    top: 50%;
    left: 50rpx;
    display: block;
    width: 32rpx;
    height: 32rpx;
    transform: translateY(-50%);
    z-index: 10;
}

.searchLink-input {
    padding-left: 60rpx;
    font-size: 24rpx;
    height: 60rpx;
    background: #F0F0F0;
    color: #999999;
    border-radius: 16rpx;
}

.none {
    display: none;
}

.player-image,.free-user-avator,.free-album-image {
    will-change: transform;
}

.btn-hover {
    opacity: .8;
}

.btn-hover.disabled {
    opacity: 1;
}

button[plain] {
    padding: 0;
    margin: 0;
    border: none;
    border-radius: 0;
}