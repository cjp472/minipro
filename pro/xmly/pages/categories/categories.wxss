.container {
    font-size: 28rpx;
    background: #f3f4f5;
    overflow: hidden;
}

.searchLink {
    background: #fff;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    margin: 0;
}

.history-wrap {
    height: 120rpx;
    display: flex;
    align-items: center;
}

.history-tag-wrap {
    display: flex;
    flex: 1;
    align-items: center;
    margin: 0 12rpx;
    overflow: hidden;
    padding: 10rpx 0;
}

.history-wrap .section-label {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #666;
    text-align: center;
    margin: 0 12rpx;
    padding: 0 44rpx;
    flex-shrink: 0;
}

.tag-history {
    background: #fff;
    color: #333;
    font-family: PingFangSC-Regular;
    text-align: center;
    box-shadow: 0 1px 1px 0 rgba(0,0,0,0.05);
    border-radius: 200rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    height: 60rpx;
    width: 160rpx;
}

.tag-history+.tag-history {
    margin-left: 28rpx;
}

.categories {
    min-height: 100vh;
}

.category {
    background: #fff;
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
}

.category+.category {
    margin-top: 12rpx;
}

.category-title {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666;
}

.category-title image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 8rpx;
}

.track-hotword-block:nth-of-type(4n+4) {
    border-right: 0;
}

.track-hotword-block {
    flex: 1;
    flex-shrink: 0;
    height: 88rpx;
    line-height: 88rpx;
    background: #fff;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
    text-align: center;
    border-right: 2rpx solid #f3f4f5;
}

.category .tag-wrap {
    min-height: 180rpx;
}

.sub-category-wrap {
    margin-bottom: 20px;
}

.sub-category-title {
    margin-left: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #666;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    width: 100%;
}

.sub-category-title::before {
    content: "";
    height: 28rpx;
    width: 6rpx;
    background: #f86442;
    display: block;
    margin-right: 10rpx;
}

.sub-category-tag {
    width: calc(100vw /3);
    height: 88rpx;
    line-height: 88rpx;
    display: inline-flex;
    align-items: center;
    padding-left: 30rpx;
    box-sizing: border-box;
    background: #fff;
    border-right: 2rpx solid #f3f4f5;
    border-bottom: 2rpx solid #f3f4f5;
}

.sub-category-tag:nth-of-type(3n+3) {
    border-right: none;
}

.sub-category-tag:nth-last-of-type(2) {
    border-bottom: none;
}

.sub-category-tag:nth-last-of-type(1) {
    border-bottom: none;
}

.sub-category-tag:nth-last-of-type(3) {
    border-bottom: none;
}

.sub-category-tag image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.miniprogram {
    margin: 0 auto;
    background: #fff;
    border-bottom: 6px solid #f3f4f5;
}

.miniprogram navigator {
    padding: 10rpx 80rpx 14rpx;
    background: transparent;
}

.swiper-img {
    background-size: 100%;
    background-clip: content-box;
    transform: scale3d(1,1,1);
    transition: transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out,-webkit-transform 0.3s ease-in-out;
}

.slide-image {
    display: block;
    width: 100%;
    height: 278rpx;
    background-size: 100%;
    border-radius: 10px;
    box-shadow: 0 3px 5px rgba(0,0,0,0.2);
    overflow: hidden;
}