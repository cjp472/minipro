.albums {
    background: #fff;
    padding: 36rpx 0 0 34rpx;
}

.album {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    height: 200rpx;
    position: relative;
    margin-bottom: 31rpx;
}

.album-cover {
    width: 152rpx;
    height: 152rpx;
    border-radius: 3px;
    flex-shrink: 0;
}

.album-info {
    flex: 1;
    overflow: hidden;
    margin-top: 2rpx;
    margin-left: 34rpx;
    padding-bottom: 30rpx;
    height: 159rpx;
    border-bottom: 2rpx solid #e1e1e1;
}

.category .album:last-child .album-info {
    border-bottom: 0;
}

.album-title {
    font-size: 36rpx;
    line-height: 40rpx;
    color: #111;
    font-family: PingFangSC-Regular;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.album-intro {
    margin: 14rpx 0 18rpx 0;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #9b9b9b;
    font-family: PingFangSC-Light;
}

.album-playcount {
    font-family: PingFangSC-Light;
    font-size: 26rpx;
    color: #999;
}

.icon-playcount {
    margin-right: 10rpx;
    width: 20rpx;
    height: 20rpx;
}

.icon-tracksCounts {
    margin-left: 22rpx;
    width: 16rpx;
    height: 18rpx;
    background: url('https://img.alicdn.com/imgextra/i3/732450928/TB27zKIdbJmpuFjSZFwXXaE4VXa_!!732450928.png') no-repeat center;
    background-size: 100%;
    margin-right: 12rpx;
}

.loading-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50rpx 0;
    color: #9b9b9b;
}

.loading-text {
    font-family: PingFangSC-Light;
    font-size: 28rpx;
}

.scrollBar {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    white-space: nowrap;
    background: #fff;
    font-size: 28rpx;
    color: #333;
}

.scrollBar-btn {
    position: relative;
    width: 84rpx;
    height: 80rpx;
    background: #f9f9f9;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 1px 0 7px 0px #9a9a9a;
}

.scrollBar-btn::after {
    content: '';
    margin-bottom: 10rpx;
    transform: rotate(45deg);
    display: block;
    width: 16rpx;
    height: 16rpx;
    border-right: 2px solid #f86442;
    border-bottom: 2px solid #f86442;
}

.scrollBar-items {
    width: calc(100vw - 84rpx);
    font-size: 28rpx;
    background: #fff;
}

.scrollBar-item {
    display: inline-block;
    padding: 0 34rpx;
    font-size: 32rpx;
    position: relative;
    font-family: PingFang-SC-Medium;
    color: #333;
}

.scrollBar-item.active {
    color: #f86442;
}

.scrollBar-item.active::after {
    content: '';
    background: #f86442;
    width: 50rpx;
    height: 4rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 34rpx;
}

.types {
    display: flex;
    flex-wrap: wrap;
    padding: 16rpx 0;
    background: #fbfbfb;
    font-size: 28rpx;
    color: #333;
}

.type {
    position: relative;
    width: 25%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}

.type.active {
    color: #f86442;
}

.type.active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    height: 3rpx;
    width: 50rpx;
    background: #f86442;
}

.icon-paid {
    position: absolute;
    width: 28px;
    height: 28px;
    top: 0;
}

.album-image-wrap {
    padding: 0 24rpx;
}

.icon-play,.icon-pause {
    top: 0;
}

.track-info {
    height: 50px;
}

.icon-vip-free {
    position: absolute;
    width: 52rpx;
    top: 0;
}