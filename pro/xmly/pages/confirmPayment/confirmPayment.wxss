    border-bottom: 2rpx solid #eee;
}

.cell-hd {
    color: #999999;
    float: left;
    margin-right: 10rpx;
}

.cell-bd {
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
}

.price {
    color: #F86442;
}

.rules {
    margin: 60rpx 32rpx 32rpx;
}

.rules-hd {
    font-size: 32rpx;
    color: #333;
    line-height: 1;
    margin-bottom: 20rpx;
}

.rule-item {
    font-size: 28rpx;
    color: #999;
    line-height: 1;
    margin-bottom: 16rpx;
}

