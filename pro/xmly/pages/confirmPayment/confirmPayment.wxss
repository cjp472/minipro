}

.btn-to-pay-wx {
    background: #F86442;
}

.btn-to-pay-xd {
    background: #F6A623;
}

.btn-area {
    text-align: center;
    margin: 0 32rpx 32rpx;
}

.pop-up-box-container {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    z-index: 999;
}

.pop-up-box-container::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
}

.pop-up-box-container::before {
    content: '';
    display: inline-block;
    width: 0;
    height: 100%;
    vertical-align: middle;
}

.pop-up-box-wrap {
    box-sizing: border-box;
    position: relative;
    display: inline-block;
    width: 630rpx;
    vertical-align: middle;
    background: #fff;
    z-index: 1;
    padding: 56rpx;
    border-radius: 10rpx;
    overflow: visible;
}

.box-hd text {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    margin: 36rpx auto 60rpx;
    line-height: 50rpx;
}

.box-bd {
    text-align: left;
    font-size: 32rpx;
    line-height: 32rpx;
    padding-bottom: 10rpx;
}

.box-hd {
    overflow: visible;
}

.box-bd-item {
    margin-bottom: 40rpx;
    overflow: hidden;
    line-height: 1.3;
    text-align: center;
}

.box-bd-item text {
    color: #FC5832;
}

.btn-to-pay {
    border-radius: 4rpx;
    color: #fff;
    font-size: 32rpx;
    line-height: 32rpx;
    padding: 26rpx;
    margin-top: 26rpx;
}

.btn-to-pay-wx {
    background: #F86442;
}

.btn-to-pay-xd {
    background: #F6A623;
}

.icon-close-box {
    position: absolute;
    top: 0;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    background-image: linear-gradient(to top right,#FFFFFF 0%,#FFFFFF 50%,rgba(245,245,245,.8) 50%,rgba(245,245,245,.8) 100%);
    color: #D8D8D8;
    font-size: 40rpx;
    text-align: right;
    padding-right: 10rpx;
}

.icon-close-box image {
    width: 40rpx;
    height: 40rpx;
}

.xmlogo {
    display: block;
    margin: -92rpx auto 0;
    width: 386rpx;
    height: 204rpx;
}

.mybought {
    color: #F86442;
}

.btm-close {
    position: absolute;
    bottom: -100rpx;
    left: 50%;
    margin-left: -28rpx;
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
    line-height: 40rpx;
}

.btm-close .close {
    font-size: 24px;
    display: inline-block;
    color: #fff;
    vertical-align: middle;
}

.app-box {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
    text-align: center;
    z-index: 9;
}

.app-box:before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.7);
    z-index: -1;
}

.app-box:after {
    content: '';
    display: inline-block;
    width: 0;
    height: 100%;
    overflow: hidden;
    vertical-align: middle;
}

.app-box-main {
    display: inline-block;
    width: 620rpx;
    max-width: 99%;
    background: #FFFFFF;
    border-radius: 10rpx;
    vertical-align: middle;
    overflow: hidden;
}

.close {
    float: right;
    width: 15px;
    height: 15px;
    padding: 15px;
}

.share-box:before {
    vertical-align: bottom;
}

@-webkit-keyframes up {
    from {
        transform: translate3d(0,100%,0);
    }

    to {
        transform: translate3d(0,0,0);
    }
}

@keyframes up {
    from {
        transform: translate3d(0,100%,0);
    }

    to {
        transform: translate3d(0,0,0);
    }
}

.share-box .app-box-main {
    width: 100%;
    max-width: 100%;
    vertical-align: bottom;
    border-radius: 0;
    padding: 15px 0 0;
    position: relative;
    animation: up .7s ease both;
}

.share-box .btn-know-area {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.share-box .btn-share {
    flex: 1 1 auto;
    align-self: stretch;
    height: auto;
    font-size: 18px;
    color: #fff;
    background: #FF572A;
}

.share-box .btn-share image {
    display: block;
    width: 60px;
    height: 60px;
    margin: auto;
}

.share-box .app-box-main .close {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 9;
}

.tit-pay {
    font-size: 16px;
    color: #2C2C2C;
    font-weight: bold;
    text-align: center;
    border-bottom: 1px solid #ccc;
    padding: 0 0 10px;
}

.pay-tips {
    font-size: 16px;
    color: #2C2C2C;
    text-align: center;
    padding: 20px 0;
    line-height: 2;
}

.pay-tips view {
    padding: 0 10px;
}