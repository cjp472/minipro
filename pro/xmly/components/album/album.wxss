.album {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 200rpx;
}

.album-cover {
    width: 130rpx;
    height: 130rpx;
}

.album-info {
    min-height: 159rpx;
    width: 540rpx;
    border-bottom: 1rpx solid #e8e8e8;
    align-self: flex-end;
}

.no-border-bottom {
    border-bottom: 1rpx solid #fff!important;
}

.album-title {
    font-size: 32rpx;
    color: #111;
}

.album-intro {
    margin: 10rpx 0;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 26rpx;
    color: #999;
}

.album-playcount {
    font-size: 22rpx;
    color: #999;
}

.icon-playcount {
    margin-right: 12rpx;
    width: 20rpx;
    height: 20rpx;
}

.icon-ispaid {
    position: absolute;
    width: 33rpx;
    height: 33rpx;
    align-self: flex-start;
    margin-top: 36rpx;
}

.album-hover {
    opacity: 0.8;
}

.vertical-album {
    flex-direction: column;
    height: auto;
}

.vertical-album .album-title {
    font-size: 13px;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.vertical-album .album-info {
    min-height: auto;
    width: 100%;
    border: none;
}

.vertical-album .album-intro {
    font-size: 24rpx;
    line-height: 34rpx;
    max-height: 68rpx;
    color: #999;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.vertical-album .imgs {
    position: relative;
    border-radius: 3px;
    width: 100%;
    overflow: hidden;
    font-size: 0;
}

.vertical-album .imgs .album-cover {
    width: 100%;
    height: 224rpx;
    background-image: linear-gradient(-180deg,rgba(3,3,3,0.00) 79%,rgba(0,0,0,0.72) 100%);
}

.vertical-album .album-playcount {
    box-sizing: border-box;
    position: absolute;
    color: #fff;
    padding-left: 8px;
    font-size: 24rpx;
    height: 34rpx;
    line-height: 34rpx;
    background: rgba(0,0,0,0.3);
    left: 0;
    bottom: 0;
    width: 100%;
}