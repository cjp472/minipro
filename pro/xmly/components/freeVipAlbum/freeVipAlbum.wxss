.album-container {
    display: flex;
    flex-direction: column;
}

.album-cover {
    width: 100%;
    padding-bottom: 100%;
    background: #eee center/cover no-repeat;
    margin-bottom: 15rpx;
    border-radius: 6rpx;
    overflow: hidden;
}

.vip-free::before {
    content: 'VIP';
    position: absolute;
    padding: 2rpx 14rpx;
    -webkit-text-size-adjust: none;
    font-size: 20rpx;
    line-height: 28rpx;
    color: #FFFFFF;
    background-image: linear-gradient(42deg,#E5B587 0%,#D18E59 100%);
    box-shadow: 0 2rpx 2rpx 0 #E6BD9B;
    border-radius: 6rpx 0 0 0;
}

.album-tit {
    font-size: 26rpx;
    line-height: 36rpx;
    max-height: 72rpx;
    color: #FEF9F0;
    margin-bottom: 5rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.album-price {
    font-size: 24rpx;
    color: #000000;
    letter-spacing: 0.34px;
    line-height: 40rpx;
}

.price-count {
    font-size: 28rpx;
    color: #F86442;
    font-weight: bold;
}