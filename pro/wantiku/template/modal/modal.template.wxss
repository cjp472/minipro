.modal-mask {
    display: flex;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    overflow: hidden;
    z-index: 9999;
    align-items: center;
}

.modal-cont {
    width: 618rpx;
    margin: 0 auto;
    background: #fff;
    border-radius: 10rpx;
    text-align: center;
}

.modal-hd {
    margin: 40rpx 0;
    font-size: 36rpx;
    color: #000;
}

.modal-bd {
    margin: 0 66rpx 50rpx;
    font-size: 30rpx;
    color: #7A7A7A;
}

.modal-ft {
    line-height: 98rpx;
    border-top: 1rpx solid #EBEBEB;
    font-size: 36rpx;
    color: #3CC51F;
}