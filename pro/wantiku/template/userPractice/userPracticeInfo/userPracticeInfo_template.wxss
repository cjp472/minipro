.paper-nav-cont {
    align-items: center;
}

.paper-show-module-btn {
    flex-grow: 1;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
}

.paper-show-module-btn .icon_qiehuan {
    color: #7a7a7a;
    font-size: 25rpx;
}

.paper-module {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 750rpx;
    background: rgba(0,0,0,0.50);
    z-index: 9999;
    transition: all 0s ease 0.3s;
    transform: translate3d(0,-100%,0);
}

.paper-module .paper-module-cont {
    background: #ffffff;
    transition: all 0.3s ease;
    transform: translate3d(0,-100%,0);
    height: auto;
}

.paper-module .paper-module-cont view {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    color: #4E4E4E;
    border-bottom: 1rpx solid #EBEBEB;
}

.paper-module .paper-module-cont view:last-child {
    border: 0;
}

.paper-module .paper-module-title {
    justify-content: space-between;
    align-items: center;
    padding: 0 0 0 30rpx;
    box-sizing: border-box;
    height: 98rpx;
}

.paper-module .paper-module-title .iconfont {
    color: #7A7A7A;
    font-size: 23rpx;
    display: inline-block;
    width: 98rpx;
    height: 98xpx;
    text-align: center;
}

.paper-module.show {
    transition: all 0s ease 0s;
    transform: translate3d(0,0,0);
}

.paper-module.show .paper-module-cont {
    overflow: hidden;
    transform: translate3d(0,0,0);
}