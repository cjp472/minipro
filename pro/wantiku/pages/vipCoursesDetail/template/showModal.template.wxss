.show-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    z-index: 999;
    display: flex;
    align-items: center;
}

.modal-cont {
    width: 600rpx;
    max-height: 740rpx;
    background-color: #fff;
    border-radius: 16rpx;
    margin: 0 auto;
}

.modal-hd {
    line-height: 104rpx;
    height: 104rpx;
    align-items: center;
    font-size: 32rpx;
    color: #4E4E4E;
    border-bottom: 1rpx solid #EBEBEB;
    text-align: center;
    position: relative;
}

.close-btn {
    width: 45rpx;
    height: 45rpx;
    line-height: 45rpx;
    color: #ccc;
    text-align: right;
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -22rpx;
}

.close-btn .icon_guanbi {
    font-size: 26rpx;
}

.modal-bd {
    display: flex;
    flex-direction: column;
    height: 632rpx;
}

.modal-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    position: relative;
    padding: 24rpx 0;
    align-items: center;
}

.modal-item :after {
    content: '';
    position: absolute;
    left: 30rpx;
    bottom: 0;
    width: 100%;
    border-bottom: 1rpx solid #EBEBEB;
}

.modal-info {
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    color: #7A7A7A;
    align-items: center;
    margin-left: 30rpx;
    flex: 1;
}

.modal-info .avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.modal-info .nick-name {
    display: inline-block;
    font-size: 26rpx;
    max-width: 140rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 30rpx;
    color: #4E4E4E;
    margin-right: 14rpx;
}

.modal-info .highlight {
    color: #fc6808;
}

.modal-info .info-box view {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: left;
}

.modal-item .btn-box {
    width: 130rpx;
    margin-right: 30rpx;
}

.modal-item .join-btn {
    line-height: 60rpx;
    width: 130rpx;
    height: 60rpx;
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
    color: #fff;
}

.modal-item .join-btn-wantiku {
    background: #F94744;
}

.modal-scroll-view {
    width: 100%;
    height: 632rpx;
}

.modal-ft {
    margin-left: 30rpx;
    height: 76rpx;
    border-top: 1rpx solid #EBEBEB;
}