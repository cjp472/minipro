.user-hide-input {
    position: absolute;
    top: 80rpx;
    width: 1rpx;
    height: 1rpx;
}

.user-hide-input input {
    width: 1rpx;
    height: 1rpx;
    opacity: 0;
}

.box-animated {
    transform: translateX(-320rpx);
}

.code-wait {
    color: #cccccc;
    border: 1px solid #cccccc;
}

.code-wait::after {
    border: 1px solid #cccccc;
}

