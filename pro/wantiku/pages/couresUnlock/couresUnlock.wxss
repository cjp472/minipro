.container {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.filter-blur {
    filter: blur(10px);
}

.account-cont {
    margin-top: 20rpx;
}

.photosAlbum {
    display: inline-block;
    width: 370rpx;
    height: 370rpx;
}

.account-number {
    display: flex;
    font-size: 26rpx;
    color: #7A7A7A;
    align-items: center;
    justify-content: center;
}

.btn-cont {
    margin: 180rpx 136rpx 0;
}

.copy-button {
    display: flex;
    line-height: 88rpx;
    font-size: 30rpx;
    color: #fff;
    background: #6FCE29;
    border-radius: 10rpx;
    align-items: center;
    justify-content: center;
}

.icon_weixin2 {
    display: inline-block;
    margin-right: 10rpx;
    color: #fff;
}

.prompt-info {
    line-height: 42rpx;
    margin-top: 110rpx;
    font-size: 30rpx;
    color: #4E4E4E;
}

.prompt-info .line {
    display: inline-block;
    width: 40rpx;
    height: 1rpx;
    margin: 0 16rpx;
    background-color: #ccc;
    vertical-align: 10rpx;
}

.modal-mask {
    display: flex;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.65);
    overflow: hidden;
    z-index: 9999;
    justify-content: center;
}

.modal-mask image {
    display: inline-block;
    margin-top: 60rpx;
    width: 624rpx;
    height: 606rpx;
}

.purple .copy-button {
    background: #9C66DE;
}

.blue .copy-button {
    background: rgba(102,102,102,0.2);
}

.yellow .copy-button {
    background: #D39A10;
}

.red .copy-button {
    background: #F15454;
}

.green .copy-button {
    background: #1B9B0B;
}

.orange .copy-button {
    background: #F07D0C;
}