.customization {
    position: relative;
    background: #fff;
}

.customization image {
    display: block;
    width: 750rpx;
    height: 620rpx;
}

.introduce {
    position: absolute;
    top: 190rpx;
    left: 60rpx;
    right: 60rpx;
}

.introduce .text {
    display: block;
    font-size: 26rpx;
    line-height: 1.5;
    margin-top: 30rpx;
    color: #151515;
}

.introduce .gray {
    color: #868686;
}

@media (max-width:360px) {
    .introduce {
        top: 180rpx;
    }

    .introduce .text {
        margin-top: 20rpx;
    }
}

.recommend {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.logo {
    width: 120rpx;
    height: 120rpx;
    border: 1rpx solid #dcdcdc;
    border-radius: 10rpx;
}

.title {
    flex-grow: 1;
    margin: 0 20rpx;
    color: #333;
    font-size: 36rpx;
}

.try {
    padding: 10rpx 20rpx;
    border: 1rpx solid #00a8f3;
    border-radius: 10rpx;
    color: #00a8f3;
    font-size: 28rpx;
}

.description {
    width: 100%;
    margin: 20rpx 0 30rpx 0;
    color: #666;
    font-size: 26rpx;
    line-height: 1.5;
}

scroll-view {
    height: 441rpx;
    white-space: nowrap;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.pic {
    display: inline-block;
    margin-right: 20rpx;
}

.pic image {
    width: 248rpx;
    height: 441rpx;
}