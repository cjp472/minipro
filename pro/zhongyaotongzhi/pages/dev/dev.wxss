.notice-header {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    background-color: #1677d2;
    position: fixed;
    top: 0;
    z-index: 1;
}

.notice-header-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-grow: 1;
}

.notice-header-item-text {
    margin-bottom: 30rpx;
    color: #fff;
    font-size: 32rpx;
}

.notice-header-item.unselected .notice-header-item-text {
    color: #92b5e5;
}

.notice-header-item-icon {
    width: 24rpx;
    height: 12rpx;
}

.notice-header-item.unselected .notice-header-item-icon {
    visibility: hidden;
}

.notice-content {
    padding-top: 100rpx;
}

.notice-content-item.unselected {
    display: none;
}

.notice-list-item {
    display: flex;
    flex-direction: column;
    margin: 30rpx;
}

.cover {
    width: 690rpx;
    height: 294rpx;
    background-color: #fff;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    position: absolute;
    z-index: -2;
}

.cover-overshadow {
    width: 690rpx;
    height: 294rpx;
    background-color: #000;
    opacity: 0.4;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    position: absolute;
    z-index: -1;
}

.cover-info {
    position: relative;
    width: 690rpx;
    height: 294rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.cover-top {
    position: absolute;
    left: 0;
    right: 0;
    top: 16rpx;
    color: #fff;
    font-size: 30rpx;
}

.cover-top label {
    display: block;
    width: 80rpx;
    padding: 12rpx;
    text-align: center;
    background: #f10000;
}

.cover-top .warn {
    background: #FFC107;
}

.cover-top view {
    position: absolute;
    top: 0;
    right: 0;
    background: #1677d2;
    padding: 12rpx 20rpx;
}

.info-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.notice-list-item-delete {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.notice-list-item-delete image {
    width: 20rpx;
    height: 20rpx;
    padding: 20rpx;
}

.notice-list-item-title {
    padding: 0 20rpx;
    color: #fff;
    font-size: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
}

.notice-list-item-time {
    padding: 20rpx 20rpx 28rpx 20rpx;
    color: #fff;
    font-size: 24rpx;
}

.notice-list-item-bottom {
    width: 690rpx;
    background-color: #fff;
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
    box-shadow: 0 30rpx 20rpx -20rpx rgba(0,0,0,0.16);
}

.notice-list-item-count,.notice-list-item-name {
    padding: 28rpx 20rpx;
    color: #aaa;
    font-size: 26rpx;
}

.notice-list-item-bottom image {
    flex-shrink: 0;
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}