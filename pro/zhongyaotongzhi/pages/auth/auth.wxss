.login {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    padding: 80rpx 0 0;
    background: #fff;
    text-align: center;
}

.login-logo {
    display: block;
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto 40rpx;
}

.login-title {
    font-size: 40rpx;
    color: #333;
    line-height: 1.5;
}

.login-desc {
    display: block;
    font-size: 28rpx;
    color: #999;
    line-height: 1.5;
    padding: 60rpx 0;
}

.btn-auth {
    display: flex!important;
    align-items: center;
    justify-content: center;
    width: 500rpx!important;
}

.btn-auth image {
    width: 42rpx;
    height: 42rpx;
    margin-top: 0!important;
    margin-right: 15rpx!important;
}

.login-contact {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 30rpx;
    text-align: center;
    overflow: hidden;
}

.login-contact view {
    font-size: 26rpx;
    color: #999;
    padding-bottom: 20rpx;
}

.login-contact label {
    display: block;
    color: #1677d2;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.login-contact button {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    opacity: 0;
    background: #ccc;
    z-index: 10;
}