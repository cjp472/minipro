.qrcode-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.back,.save {
    background-color: #fff;
    padding: 15rpx 30rpx;
    margin: 20rpx 30rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.back {
    color: #404040;
}

.tips {
    color: #f25d5d;
    font-size: 28rpx;
    text-decoration: underline;
}

.save {
    color: #1677d2;
}

.qrcode-pic-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.qrcode-pic {
    width: 690rpx;
    height: 1178rpx;
    background-color: #fff;
    margin-bottom: 30rpx;
}