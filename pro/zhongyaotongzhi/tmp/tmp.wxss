.dialog {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}

.dialog-bg {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.6;
    position: absolute;
    z-index: 2;
}

.dialog-content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: absolute;
    z-index: 3;
}

.dialog-close-btn {
    width: 48rpx;
    height: 75rpx;
}

.dialog-view {
    position: relative;
    width: 590rpx;
    height: 840rpx;
    background: #fff;
    border-radius: 10rpx;
}

.dialog-image {
    display: none;
}

.dialog-info {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    z-index: 4;
}

.dialog-title {
    margin: 32rpx 0 32rpx 0;
    color: #12b7f5;
    font-size: 40rpx;
}

.dialog-scroll-view {
    width: 520rpx;
    height: 650rpx;
    line-height: 1.6;
    color: #333;
    font-size: 28rpx;
}